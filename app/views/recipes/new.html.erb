<div class="mx-auto md:w-2/3 w-full" >
  <h1 class="font-bold text-4xl text-teal-900">Create your recipe</h1>

  <%= render "form", recipe: @recipe %>

  <%= link_to recipes_path, class: "inline-flex items-center ml-2 rounded-lg py-2 px-3 inline-block font-medium text-teal-900 hover:text-white border border-teal-900 hover:bg-teal-900" do %>
    <%= render_icon "micro/arrow_uturn_left", classes: "me-1" %> Cancel
  <% end %>
</div>
<div class="form-container lg:w-auto flex flex-row-reverse md:flex-row-reverse lg:flex-row lg:mx-auto justify-center mt-20">
  <%= render @recipe %>
  <div class="flex flex-col gap-2 fixed right-0 md:right-0 lg:right-[calc(max(2rem,(100vw-min(100vw,53rem))/2))] xl:right-[calc(max(2rem,(100vw-min(100vw,64rem))/2))]">
        <%= link_to edit_recipe_path(@recipe), class: "inline-flex items-center hover:bg-secondary py-2 px-3 text-secondary hover:text-white inline-block font-medium cursor-pointer", aria: { label: "Edit recipe" } do %>
          <%= render_icon "micro/pencil_square", classes: "me-0" %>
        <% end %>
        <%= button_to recipe_path(@recipe), method: :delete, data: { turbo_confirm: "Are you sure?" }, aria: { label: "Delete recipe" }, class: "inline-flex items-center py-2 px-3 hover:bg-secondary text-secondary hover:text-white inline-block font-medium cursor-pointer" do %>
          <%= render_icon "micro/trash", classes: "me-0" %>
        <% end %>
  </div>
</div>

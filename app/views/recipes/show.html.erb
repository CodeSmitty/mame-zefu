<div class="mx-auto md:w-4/5 w-full form-container lg:px-20 flex flex-col justify-center">
  <div class="lg:mx-auto">

    <%= render @recipe %>

    <%= link_to edit_recipe_path(@recipe), class: "inline-flex items-center rounded-lg py-2 px-3 bg-white hover:bg-secondary text-secondary hover:text-white border border-secondary inline-block font-medium cursor-pointer" do %>
      <%= render_icon "micro/pencil_square", classes: "me-1" %> Edit
    <% end %>

    <div class="inline-block ml-2">
      <%= button_to recipe_path(@recipe), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center rounded-lg py-2 px-3 bg-white hover:bg-secondary text-secondary hover:text-white border border-secondary inline-block font-medium cursor-pointer" do %>
        <%= render_icon "micro/trash", classes: "me-1" %> Delete
      <% end %>
    </div>
  </div>
</div>

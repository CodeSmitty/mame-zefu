<%= form_with(model: recipe, class: "contents") do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 relative">
    <%= form.text_field :name, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
    <%= form.label :name, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
  </div>

  <div class="my-2 lg:my-10 w-full flex flex-row flex-wrap justify-start">
    <div class="my-5 lg:my-2 basis-full sm:basis-auto relative">
      <%= form.text_field :yield, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full sm:w-4/5 text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
      <%= form.label :yield, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
    </div>

    <div class="my-5 lg:my-2 basis-full lg:basis-auto relative">
      <%= form.text_field :prep_time, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full sm:w-4/5 text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
      <%= form.label :prep_time, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
    </div>

    <div class="my-5 lg:my-2 basis-full lg:basis-auto relative">
      <%= form.text_field :cook_time, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full sm:w-4/5 text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
      <%= form.label :cook_time, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
    </div>
  </div>

  <div class="my-5 lg:my-2 relative">
    <%= form.collection_select :category_names, Category.all, :name, :name, {}, { data: { controller: "tom-select" }, multiple: true, placeholder: "Add Categories" } %>
  </div>

  <div class="my-10 relative">
    <%= form.text_area :description, data: { controller: "textarea", action: "textarea#resize" }, rows: 2, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
    <%= form.label :description, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
  </div>

  <div class="my-10 relative">
    <%= form.text_area :ingredients, data: { controller: "textarea", action: "textarea#resize" }, rows: 6, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
    <%= form.label :ingredients, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
  </div>

   <div class="my-10 relative">
    <%= form.text_area :directions, data: { controller: "textarea", action: "textarea#resize" }, rows: 6, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
    <%= form.label :directions, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-6 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
  </div>

  <div class="my-2 relative">
    <%= form.text_area :notes, data: { controller: "textarea", action: "textarea#resize" }, rows: 2, class: "block rounded-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", placeholder: " " %>
    <%= form.label :notes, class: "absolute text-sm text-teal-900 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-gray-50 px-2 peer-focus:bg-gray-50 peer-focus:pb-0 peer-focus:px-2 peer-focus:text-teal-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/3 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1" %>
  </div>

  <div class="my-10 flex flex-column flex-wrap justify-center sm:justify-end w-full">
    <div class="mr-0 sm:mr-10">
      <%= form.label :rating, 'Rate your recipe', class: "text-teal-900 text-sm text-right" %>
    </div>
    <div class="rating py-1 justify-center sm:justify-start">
      <%= form.collection_radio_buttons(:rating, [[5], [4], [3], [2], [1]], :first, :last) do |star| %>
        <%= star.radio_button %>
        <%= star.label(class: "text-teal-900") %>
      <% end %>
    </div>
  </div>

  <div class="inline relative">
    <%= form.hidden_field :source %>
    <%= button_tag(class: "inline-flex items-center rounded-lg py-2 px-3 bg-teal-900 hover:bg-white text-white hover:text-teal-900 border border-teal-900 inline-block font-medium cursor-pointer") do %>
      <%= render_icon "micro/document_check", classes: "me-1" %> Save
    <% end %>
  </div>
<% end %>

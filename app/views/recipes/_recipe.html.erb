<div id="<%= dom_id recipe %>">
  <h1 class="flex flex-row flex-nowrap">
    <strong class="text-3xl font-small"><%= recipe.name %></strong>
    <td class="recipe-<%= recipe.id %>"> 
    <% if recipe.is_favorite? %>
      <%= button_to toggle_favorite_recipe_path(recipe), method: :post, remote: :true, class: "btn btn-xs btn-#{ recipe.is_favorite ? 'success' : 'warning' } text-rose-600"  do %>
        <%= render "icons/mini/heart" %>
      <% end %>
    <% else %>
      <%= button_to toggle_favorite_recipe_path(recipe), method: :post, remote: :true, class: "btn btn-xs btn-#{ recipe.is_favorite ? 'success' : 'warning' } text-black"  do %>
        <%= render "icons/mini/empty_heart" %>
      <% end %>
    <% end %>   
  </td>
  </h1>

  


  <% if recipe.rating.present? %>
    <div class="mb-5 flex flex-row flex-nowrap justify-between w-1/5">
      <div class="flex flex-row">
        <% recipe.rating.to_i.times do %>
          <%= render partial: "icons/mini/star", locals: { style: "text-yellow-300" } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex flex-row flex-nowrap justify-between w-100">
    <div class="flex flex-row flex-nowrap justify-between w-100">
      <% %W[yield prep_time cook_time].each do |field| %>
        <%= render partial: "recipes/helpers/prep", locals: { value: recipe.send(field), label: field.titleize }, class: "text-center" %>
      <% end %>
    </div>
  </div>

  <% recipe.categories.each do |c| %>
    <h2><%= c.name %>,</h2>
  <% end %>
  

  <% %W[description ingredients directions notes].each do |field| %>
    <%= render partial: "recipes/helpers/fields", locals: { value: recipe.send(field), label: field.titleize }, class: "text-center" %>
  <% end %>
</div>
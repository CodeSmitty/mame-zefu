<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="m-1">
    <%= form_tag @recipe_path, method: :get, data: { turbo_frame: :recipes, turbo_action: "advance", controller: "filter" } do |f| %>
      <div class="w-4/5 lg:w-1/2 m-auto mb-4">
        <div class="relative">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
              <%= render_icon 'mini/magnifying' %>
            </div>
            <%= text_field_tag :query, params[:query], data: { action: "input->filter#submit" }, placeholder: "Search ...", class: "block rounded-lg px-2.5 pb-2.5 w-full ps-10 text-sm text-gray-900 bg-gray-50  border border-teal-900 appearance-none focus:outline-none focus:ring-0 focus:border-teal-600 peer", autocomplete: 'off', autofocus: 'true', type: 'search' %>
        </div>
      </div>
    <% end %>
  </div>
  <%= turbo_frame_tag :recipes do %>
    <div class="flex-column flex-wrap justify-center lg:flex-nowrap">
      <% @recipes.each do |recipe| %>
        <%= link_to recipe.name, recipe, class: "block m-auto lg:w-1/3 font-medium mb-1 text-2xl p-4 text-center lg:text-left" %>
      <% end %>
    </div>
  <% end %>
</div>

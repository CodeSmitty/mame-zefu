<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-center items-center">
    <%= link_to "New recipe", new_recipe_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="recipes" class="min-w-full flex-column">
    <% @recipes.each do |recipe|%>
        <%= link_to "#{recipe.name}", recipe, class: "block font-medium mb-1 text-2xl p-4 text-center" %>
    <%end%>
  </div>
</div>

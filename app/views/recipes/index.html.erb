<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="recipes" class="w-auto flex-column flex-wrap justify-center align-center">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe.name, recipe, class: "block m-auto w-1/3 font-medium mb-1 text-2xl p-4 text-left" %>
    <% end %>
  </div>
</div>

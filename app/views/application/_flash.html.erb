<div id="flash" class="flex justify-center text-xs">
    <% flash.each do |key, value| %>
      <% classes =
           case key
           when "alert"
             "bg-red-50 text-red-500 border-red-600"
           when "notice"
             "bg-green-50 text-green-500 border-green-600"
           else
             "bg-gray-50 text-gray-500 border-gray-600"
           end %>
      <div class="flash <%= key %> border py-2 px-3 m-1 font-medium rounded-lg inline-block <%= classes %>"><%= value %></div>
    <% end %>
</div>
